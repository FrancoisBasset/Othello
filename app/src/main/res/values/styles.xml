<resources>

    <style name="Othello" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorBackground">@color/color_background</item>
    </style>

    <style name="white_button">
        <item name="android:background">@android:color/white</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="black_button">
        <item name="android:background">@android:color/black</item>
        <item name="android:color">@android:color/white</item>
    </style>

    <style name="myFriends_label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Othello.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Othello.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
